<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <div class="page-header">
      <h1>New Account</h1>
      <p class="lead">Create a new account</p>
    </div>

    <div class="row">
      <div class="col-md-12">

        <%= form_for @account, html: { class: "form-group", role: "form" } do |f| %>
          <div class="form-group">
            <%= f.label :name, class: "control-label" %>
            <%= f.text_field :name, class: 'form-control', placeholder: 'Account Name' %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Account', class: 'btn btn-default' %>
          </div>
        <% end %>

        <hr>

        <h4><%= link_to "Cancel", accounts_path %></h4>

      </div>
    </div>

  </div>
</div>
