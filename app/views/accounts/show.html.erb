<h1>Accounts#show</h1>
<p>Find me in app/views/accounts/show.html.erb</p>

<h2>Account name: <%= @account.name %></h2>
<h2>Current balance: <%= number_to_currency(@account.balance, unit: "â‚¬", separator: ".", delimiter: "") %></h2>

<%= link_to "Edit account info", edit_account_path %>
||
<%= link_to "Delete account", @account, method: :delete, data: {confirm: "Delete \"#{@account.name}\" account?"} %>
||
<%= link_to "Back to Accounts", accounts_path %>

<p></p>

<%= link_to "Deposit funds", '#'%>
||
<%= link_to "Withdraw funds", '#'%>

<div class="btn-group btn-group-justified" role="group" aria-label="...">
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#depositModal">
      Deposit
    </button>
  </div>
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#withdrawalModal">
      Withdraw
    </button>
  </div>
</div>

<div class="list-group">
  <% @account.transaktions.each do |transaktion| %>
    <li class="list-group-item"><%= transaktion.amount %></li>
  <% end %>
</div>

<!-- Deposit Modal -->
<div class="modal fade" id="depositModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Deposit funds</h4>
      </div>
      <div class="modal-body">
        <%= form_for @transaktion, :url => deposit_transaktions_path, html: { class: "form-inline", role: "form" } do |f| %>
          <div class="form-group">
            <%= f.number_field :amount, class: 'form-control', placeholder: 'amount' %>
          </div>
          <div class="form-group">
            <%= f.submit 'deposit!', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>

<!-- Withdrawal Modal -->
<div class="modal fade" id="withdrawalModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Withdraw funds</h4>
      </div>
      <div class="modal-body">
        <%= form_for @transaktion, :url => withdrawal_transaktions_path, html: { class: "form-inline", role: "form" } do |f| %>
          <div class="form-group">
            <%= f.number_field :amount, class: 'form-control', placeholder: 'amount' %>
          </div>
          <div class="form-group">
            <%= f.submit 'withdraw!', class: 'btn btn-danger' %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
